<%= simple_form_for([@post,@post.comments.build]) do |f| %>
    <div class="container">
        <div class="field">
            <div class="control">
                <input type="hidden" name="comment[name]" value="<%= current_user.email %>" />
            </div>
        </div>
        <div class="field">
            <div class="control">
                <%= f.input :comment, input_html:{class:'input'},placeholder:'Comment ... ', wrapper:false, label_html:{class:'label'}%>
            </div>
        </div>
        <input type="hidden" name="comment[post_id]" value="<%= @post.id%>" />
        <%= f.button :submit, class: "button is-primary" %>
        <%= link_to "cancel", post_path, class:"button is-danger"%>
    </div>
<% end %>