<div class="section">
<%= simple_form_for @post do |f| %>
    <div class="container">
        <div class="field">
            <div class="control">
                <%= f.input :title, input_html:{class:'input'}, placeholder:'Title', wrapper:false, label_html:{class:'label'}%>
            </div>
        </div>
        <div class="field">
            <div class="control">
                <%= f.input :content, input_html:{class:'textarea'},placeholder:'Enter some content', wrapper:false, label_html:{class:'label'}%>
            </div>
        </div>
                
        
        <%= f.button :submit, class: "button is-primary" %>
        <%= link_to "cancel", root_path, class:"button is-danger"%>
    </div>
<% end %>
</div>