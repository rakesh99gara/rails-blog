<% content_for :page_title,"Log In"%>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="section">
    <div class="container">
      <div class="form-inputs">
        <div class="field">
          <div class="control">
            <%= f.input :email, input_html:{class:'input', autocomplete: "email" }, required: true, autofocus: true, placeholder:'Email', wrapper:false, label_html:{class:'label'}%>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.input :password, input_html:{class:'input', autocomplete: "new-password" }, required: true, placeholder:'Password', wrapper:false, label_html:{class:'label'}%>
          </div>
        </div>  
      </div>  
      <div class="form-actions">
        <%= f.button :submit, "Log in",class: "button is-primary" %>
      </div>
    </div>
  </div>
<% end %>

