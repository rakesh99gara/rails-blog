<% content_for :page_title,"Sign up"%>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

<div class="section">
  <div class="container">
    <div class="form-inputs">
      <div class="field">
        <div class="control">
          <%= f.input :email, input_html:{class:'input'}, required: true, autofocus: true, placeholder:'Email', wrapper:false, label_html:{class:'label'}%>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :password, input_html:{class:'input'}, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),placeholder:'Password', wrapper:false, label_html:{class:'label'}%>
        </div>
      </div>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Sign up",class: "button is-primary" %>  
    </div>
  </div>
<% end %>

<%# render "devise/shared/links" %>
</div>
