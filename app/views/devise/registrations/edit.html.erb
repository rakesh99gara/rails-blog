<% content_for :page_title,"Edit User"%>


<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="section">
    <div class="container">
      <div class="form-inputs">
        <div class="field">
          <div class="control">
            <%= f.input :email, input_html:{class:'input'},required: true, autofocus: true,placeholder:'Email',wrapper:false,label_html:{class:'label'} %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.input :password, input_html:{class:'input', autocomplete: "new-password" },hint: "leave it blank if you don't want to change it", required: false, placeholder:'New Password',wrapper:false,label_html:{class:'label'} %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.input :password_confirmation,input_html:{class:'input', autocomplete: "new-password" }, required: false, placeholder:'New Password', wrapper:false,label_html:{class:'label'}%>
          </div>
        </div>
        <div class="field">    
          <div class="control">
            <%= f.input :current_password,input_html:{ class:'input', autocomplete: "current-password" }, hint: "we need your current password to confirm your changes", placeholder:'Current Password',required: true,wrapper:false,label_html:{class:'label'}  %>
          </div>
        </div>
      </div>
      <div class="form-actions">
        <div class="field">
          <div class+"control">
            <%= f.button :submit, "Update" ,class: "button is-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>    
<% end %>

<div class="section">
  <div class="container">
    <h3 class="subtitle is-5">Cancel Account</h3>
    <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  </div>
</div>


